<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="30dp"
        android:text="My Nanodegree Apps!"
        android:textSize="20sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:background="#2196F3"
        android:onClick="spotify"
        android:text="spotify streamer"
        android:textAllCaps="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:background="#2196F3"
        android:onClick="scores"
        android:text="scores app"
        android:textAllCaps="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:background="#2196F3"
        android:onClick="library"
        android:text="library app"
        android:textAllCaps="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:background="#2196F3"
        android:onClick="bigger"
        android:text="build it bigger"
        android:textAllCaps="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:background="#2196F3"
        android:onClick="xyz"
        android:text="xyz reader"
        android:textAllCaps="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:background="#E040FB"
        android:onClick="capstone"
        android:text="capstone: my own app"
        android:textAllCaps="true"
        android:textColor="@android:color/white" />

</LinearLayout>
